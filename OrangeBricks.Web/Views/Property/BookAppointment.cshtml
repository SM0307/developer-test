@model OrangeBricks.Web.Controllers.Property.ViewModels.BookAppointmentViewModel
@{
	ViewBag.Title = "Book Appointment";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book Appointment</h2>

<p>When would you like to view the @Model.PropertyType on @Model.StreetName?</p>

@using (Html.BeginForm("BookAppointment", "Property", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	<div class="form-group">
		@Html.LabelFor(m => m.AppointmentDate, "Appointment Date", new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.Hidden("PropertyId", Model.PropertyId)
			@Html.TextBoxFor(m => m.AppointmentDate, new { @class = "date-picker" })
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-default" value="BookAppointment" />
		</div>
	</div>
}