@model OrangeBricks.Web.Controllers.Offers.ViewModels.MyOffersViewModel
@{
    ViewBag.Title = "My Offers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Offers Placed</h2>
<p>Your recent offers placed:</p>

@foreach (var offer in Model.BuyerOffers)
{
	<hr />
	<h3>Address: @offer.StreetName</h3>
	<p>@offer.NumberOfBedrooms bedroom @offer.PropertyType</p>
	<p>Offer Amount: @offer.Amount</p>
	<p>Offer Status: @offer.Status</p>


}